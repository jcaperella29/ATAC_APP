Bootstrap: docker
From: rocker/r-ver:4.3.1

%labels
    Maintainer ATAC DevOps ðŸ§¬
    App ATAC-seq Shiny Viewer

%environment
    export PORT=8080
    export SHINY_PORT=8080
    export DEBIAN_FRONTEND=noninteractive
    export MAKEFLAGS="-j4"

%post
    apt-get update && apt-get install -y \
        build-essential \
        libcurl4-openssl-dev \
        libssl-dev \
        libxml2-dev \
        libgit2-dev \
        libglu1-mesa \
        libxkbcommon-x11-0 \
        libharfbuzz-dev \
        libfribidi-dev \
        libfreetype6-dev \
        libbz2-dev \
        liblzma-dev \
        libz-dev \
        libncurses-dev \
        libxt-dev \
        libpng-dev \
        libjpeg-dev \
        libtiff5-dev \
        libicu-dev \
        zlib1g-dev \
        pandoc \
        libudunits2-dev \
        libgdal-dev \
        libgeos-dev \
        libproj-dev \
        libglpk-dev && apt-get clean

    # Install CRAN packages
    
Rscript -e "install.packages(c('shiny', 'shinyjs', 'plotly', 'DT', 'enrichR', 'markdown'), repos='https://cloud.r-project.org')"

    # Write Bioconductor install script
    cat <<EOF > /tmp/install_bioc.R
    if (!requireNamespace("BiocManager", quietly = TRUE))
        install.packages("BiocManager", repos="https://cloud.r-project.org")

    BiocManager::install(c(
        "ChIPseeker",
        "TxDb.Hsapiens.UCSC.hg38.knownGene",
        "org.Hs.eg.db",
        "GenomicRanges",
        "clusterProfiler",
        "enrichplot",
        "ReactomePA"
    ), ask=FALSE, update=TRUE, dependencies=TRUE)
EOF

    Rscript /tmp/install_bioc.R

%files
    app.R /app/app.R
    email_log.R /app/email_log.R
    README.md /app/README.md
    www/fairy_tail.css /app/www/fairy_tail.css
    HOW_TO.md /app/HOW_TO.md  # <-- Add this line


%runscript
    echo "ðŸ”¥ Starting ATAC Shiny App on port \${PORT}"
    exec Rscript -e "options(shiny.port=as.integer(Sys.getenv('PORT')), shiny.host='0.0.0.0'); shiny::runApp('/app')"

%startscript
    exec Rscript -e "options(shiny.port=as.integer(Sys.getenv('PORT')), shiny.host='0.0.0.0'); shiny::runApp('/app')"
